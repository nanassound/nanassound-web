---
import OnePageNavbar from "../components/OnePageNavbar.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Nanas Sound, a company based in Tallinn, Estonia, specializes in designing synthesizers and Eurorack modules.",
  image = "/products-img/mini-main.webp"  // default sharing image
} = Astro.props;

// Get absolute URL for social sharing
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <script
      defer
      data-domain="nanassound.com"
      src="https://plausible.io/js/script.js"
    ></script>
  </head>
  <body>
    <OnePageNavbar />
    <slot />
    <Footer />

    <script src="../../node_modules/preline/preline.js"></script>
  </body>
</html>
