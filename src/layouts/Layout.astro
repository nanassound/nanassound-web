---
import OnePageNavbar from "../components/OnePageNavbar.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Nanas Sound, based in Tallinn, Estonia, specializes in DIY modular synthesizers and Eurorack modules. Explore our innovative designs and elevate your music creation experience." />
    <title>{title}</title>

    <script
      defer
      data-domain="nanassound.com"
      src="https://plausible.io/js/script.js"
    ></script>
  </head>
  <body>
    <OnePageNavbar />
    <slot />
    <Footer />

    <script src="../../node_modules/preline/preline.js"></script>
  </body>
</html>
