---
import "@fontsource/roboto";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Nanas Sound | Professional Audio Solutions & Eurorack Innovation">
  <!-- Hero Section -->
  <div class="relative">
    <div class="h-[30rem] md:h-[calc(100vh-64px)] flex flex-col bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 bg-[url('https://via.placeholder.com/1920x1080/1f2937/ffffff?text=AirBending+MIDI+Controller')] bg-cover bg-center bg-no-repeat bg-blend-overlay">
      <div class="absolute inset-0 bg-black bg-opacity-60"></div>
      <div class="relative z-10 mt-auto px-4 py-8 md:px-8 md:py-12">
        <div class="max-w-5xl mx-auto text-center">
          <h1 class="block font-bold text-4xl md:text-6xl text-white mb-4">
            <span class="text-yellow-400">AirBending</span>
          </h1>
          <p class="block text-white text-xl md:text-2xl mb-6 opacity-90 max-w-3xl mx-auto">
            Revolutionary MIDI controller application for macOS. Experience intuitive gesture-based music control that transforms how you create and perform.
          </p>
                      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
              <a class="inline-block hover:opacity-80 transition-opacity focus:outline-none focus:opacity-80" href="https://apps.apple.com/us/app/airbending-midi-controller/id6748079429?mt=12&itscg=30200&itsct=apps_box_link&mttnsubad=6748079429">
                <img src="/img/mac_app_store_badge.svg" alt="Download on the Mac App Store" class="h-12 w-auto">
              </a>
              <a class="h-12 px-6 inline-flex items-center justify-center gap-x-2 text-lg text-white font-medium rounded-xl border-2 border-white/30 hover:bg-white/10 hover:border-white/50 focus:outline-none focus:bg-white/10 transition-all" href="/products/softwares">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Discover
              </a>
            </div>
          <div class="flex items-center justify-center gap-6 text-white/80 text-sm">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
              </svg>
              MIDI Controller
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2M7 4h10M7 4l-2 16h14l-2-16"></path>
              </svg>
              Gesture Control
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End Hero -->

  <!-- Featured Products Section -->
  <div class="px-4 py-16 sm:px-6 lg:px-8 mx-auto">
    <div class="max-w-7xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
          Explore our products
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Discover innovative hardware and software for musicians, producers, and creators.
        </p>
      </div>

      <!-- Products Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
        <!-- Mini Power Supply -->
        <div class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
          <div class="relative">
            <img src="/products-img/mini-main.webp" alt="Mini Power Supply" class="w-full h-48 object-cover">
            <div class="absolute top-4 right-4 bg-yellow-400 text-black px-3 py-1 rounded-full text-sm font-medium">
              Featured
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Mini Power Supply</h3>
            <p class="text-gray-600 mb-4">USB-C powered Eurorack power supply for standalone, 3U rack, or case integration.</p>
            <div class="flex gap-3">
              <a href="/products/eurorack-modules/mini" class="flex-1 py-2 px-4 bg-yellow-400 text-black text-center rounded-lg font-medium hover:bg-yellow-500 transition-colors">
                Discover
              </a>
              <a href="https://www.elecrow.com/mini-usb-c-power-supply-for-eurorack.html" target="_blank" class="py-2 px-4 border border-yellow-400 text-yellow-600 rounded-lg font-medium hover:bg-yellow-400 hover:text-black transition-colors">
                Buy Now
              </a>
            </div>
          </div>
        </div>

        <!-- Uksed Module -->
        <div class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
          <img src="/products-img/uksed-main.webp" alt="Uksed Audio Input Module" class="w-full h-48 object-cover">
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Uksed</h3>
            <p class="text-gray-600 mb-4">4-channel audio input module for professional audio routing and processing.</p>
            <a href="/products/eurorack-modules/uksed" class="block w-full py-2 px-4 bg-yellow-400 text-black text-center rounded-lg font-medium hover:bg-yellow-500 transition-colors">
              Discover
            </a>
          </div>
        </div>

        <!-- Rohkem Module -->
        <div class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
          <img src="/products-img/rohkem-main.webp" alt="Rohkem Signal Splitter" class="w-full h-48 object-cover">
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">Rohkem</h3>
            <p class="text-gray-600 mb-4">1x6 and 2x3 passive signal splitter for flexible audio routing.</p>
            <a href="/products/eurorack-modules/rohkem" class="block w-full py-2 px-4 bg-yellow-400 text-black text-center rounded-lg font-medium hover:bg-yellow-500 transition-colors">
              Discover
            </a>
          </div>
        </div>
      </div>

      <!-- View All Products Button -->
      <div class="text-center">
        <a href="/products" class="inline-flex items-center gap-2 py-3 px-6 bg-gray-900 text-white rounded-xl font-medium hover:bg-gray-800 transition-colors">
          Discover all products
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
  <!-- End Featured Products -->

  <!-- Mission Statement -->
  <div class="px-4 py-12 sm:px-6 lg:px-8 mx-auto bg-yellow-400">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl md:text-5xl font-light text-gray-900 mb-2">Play electronic music instruments anywhere</h2>
    </div>
  </div>
  <!-- End Mission Statement -->
</Layout>
